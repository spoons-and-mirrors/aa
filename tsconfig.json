{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["ES2023"],
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": ["node"]
    },
    "include": ["index.ts", "logger.ts"],
    "exclude": ["node_modules", "dist"]
}
